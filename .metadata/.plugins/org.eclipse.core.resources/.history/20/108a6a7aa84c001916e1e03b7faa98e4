package Java_Assignment;

import java.util.Scanner;

public class SumOfDigits
{
	 public static void main (String[] args) 
	    { 
	    	Scanner s=new Scanner(System.in);
	    	System.out.println("Enter a number  ");
	        int num= s.nextInt(); 
	        int digit=0;
	        int res=0;
	        while (num>=0)
	        {
	        	digit=digit+num%10;
	        	if (digit>9)
	        	{
					while (digit>=0) 
					{
						res=res+digit%10;
						
					}
				}
	        	num=num/10;
	        	
				
			}
	        
	        System.out.println(res);
	        
	         
	    } 

}
